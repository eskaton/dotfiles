# displays characters that use 8 bits
function 8bitchrs() {
  if [[ $# -ne 1 ]]; then
     echo "Usage: 8bitchrs <file>"
     return
  fi
  cat $1 | tr -d '\001-\177' | od -cx
}

function gdb_thread() {
  if [[ $# -ne 2 ]]; then
     echo "Usage: gdb_thread <pid> <thread-id>"
     return
  fi

  script=/tmp/$$.$RANDOM.gdb
  cat <<_END_ > $script
set pagination off
info thread $2
thread $2
bt
detach
quit
_END_

  gdb -pid $1 -batch -x $script
  rm -f $script
}

