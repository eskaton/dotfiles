function asc2hex() {
   if [[ -n $1 ]]; then
      v=$1;
   else 
      read v
   fi
   echo -n $v | od -tx1 | sed 's/^[0-9]*//' | tr -d "\012" | sed 's/ *//g'
}

function hex2asc() {
   if [[ -n $1 ]]; then
      v=$1;
   else 
      read v
   fi

   echo -n $v | sed 's/.\{32\}/&\n/g' | nl -i 16 -s ':' -v 0 | awk -F':' '{printf("%08x: %s\n",$1,$2)}' | xxd -c 16 -r
}

function declist2asc() {
   if [[ -n $1 ]]; then
      v=$1;
   else 
      read v
   fi

   echo -n $v | tr , '\n' | while read x; do echo $x | dec2hex; done  | tr -d '\n' | hex2asc
}

